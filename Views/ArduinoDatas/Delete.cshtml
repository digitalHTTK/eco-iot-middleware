@model Plan_io_T.Models.ArduinoData

@{
    ViewData["Title"] = "Удаление";
}

<asp:Content ID="HeaderContent" runat="server" ContentPlaceHolderID="HeadContent">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</asp:Content>

<div class="container">
    <main role="main" class="pb-3">
        <h1>Delete</h1>

        <h3>Вы уверены, что хотите удалить запись?</h3>
        <div>
            <h4>ArduinoData</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Time)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Time)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NodeID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NodeID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Humidity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Humidity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Temperature)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Temperature)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.co2Concentration)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.co2Concentration)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.coConcentration)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.coConcentration)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.lpgConcentration)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.lpgConcentration)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.smokeConcentration)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.smokeConcentration)
                </dd>
            </dl>

            @if (User.IsInRole("admin")) {
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Удалить" class="btn btn-danger" /> |
                    <a asp-action="Index">Вернуться</a>
                </form>
            }
        </div>

    </main>
</div>

